
{
  "manifest_version": 3,
  "name": "Vehicle Valuation Explorer",
  "version": "1.0",
  "description": "Get instant vehicle valuations with a beautiful, minimalist interface",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://api.vehicle-search.co.uk/*"]
}
